{% set length = images|length %}
{% if length > 0 %}
<div class="homepage-banner col-12 mb-3">
    <div class="homepage-banner__image">
        <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for i in range(0, (length - 1)) %}
                <li data-target="#carouselIndicators" data-slide-to="{{ i }}" {% if loop.first %}class="active"{% endif %}></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% for image in images %}
                <div class="carousel-item {% if loop.first %}active{% endif %}">
                    <img class="img-fluid d-block w-100" src="{{ asset('media/image/' ~ image.path) }}" alt="{{ 'sylius.homepage.banner_content'|trans }}">
                </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">{{ 'sylius.homepage.prev'|trans }}</span>
            </a>
            <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">{{ 'sylius.homepage.next'|trans }}</span>
            </a>
          </div>
    </div>
    <div class="homepage-banner__content px-4 py-4 bg-light mt-1 text-center px-lg-0 py-lg-0 mt-lg-0 text-lg-left">
        <h1 class="font-weight-bold">{{ 'sylius.homepage.banner_content'|trans }} ğŸ˜›</h1>
        <p><a href="#" class="btn btn-primary font-weight-bold">{{ 'sylius.homepage.banner_button'|trans }}</a></p>
    </div>
</div>
{% endif %}